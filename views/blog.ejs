<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head.ejs')  %>
    <title>Blog</title>
</head>
<body>
    <%- include('./partials/nav.ejs') %>

    <div class="container mt-3">
        <h1><%= blog.title %></h1>
        <img src="<%= blog.coverImageURL %>" alt="" height="300px"  width="400vw">
        <pre class="mt-3" style="overflow-x: hidden; word-wrap: break-word; white-space: pre-wrap;"><%= blog.body %></pre>
    </div>

    <div class="container mt-3">
        <img src="<%= blog.createdBy.profileImageURL  %>" width="100px" alt="">
        <p style="font-weight: bold;">Created By :  <%= blog.createdBy.fullName %></p>
    </div>

    <div class="container mt-3">
        <h4>Comments (<%= comments.length %>)</h4>
        <% if(locals.user){ %>
            <form action="/blog/comment/<%= blog._id %>" method="post">
                <div class="mb-3">
                  <input name = "content" type="text" class="form-control" placeholder="Enter your comment">
                </div>
                
                <button type="submit" class="btn btn-primary">Add</button>
              </form>

        <% } %>

        <div class="mt-3">
            <% comments.forEach(comment => { %>
                <div>
                    <img src="<%= blog.createdBy.profileImageURL  %>" width="30px" alt="">
                    <p ><%= blog.createdBy.fullName %></p>
                    <pre><%= comment.content %></pre>
                </div>
            <% }) %>
        </div>
    </div>

    
    
    <%- include('./partials/script.js') %>
</body>

</html>